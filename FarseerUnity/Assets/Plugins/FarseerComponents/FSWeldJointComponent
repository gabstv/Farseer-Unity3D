using UnityEngine;
using System.Collections;
using FarseerPhysics.Dynamics.Joints;
using FarseerPhysics.Dynamics;
using FarseerPhysics.Factories;

[AddComponentMenu("FarseerUnity/Dynamics/Joints/Weld Joint Component")]
public class FSWeldJointComponent : FSJointComponent {

  public WeldJoint joint;
	
	// Use this for initialization
	public override void InitJoint ()
	{
		base.InitJoint ();
		joint = FarseerPhysics.Factories.JointFactory.CreateWeldJoint(FSWorldComponent.PhysicsWorld,
		BodyA.PhysicsBody, 
		BodyB.PhysicsBody,
		BodyA.PhysicsBody.Position
		);
		
		//joint.DampingRatio = 0.5f;
	}
	
	// Update is called once per frame
	public override void Update ()
	{
		base.Update ();
	}
}
